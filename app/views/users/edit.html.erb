<div class = "container">
  <div class = "row justify-content-center">

    <div class= "notice">
      <%= flash[:notice] %>
    </div>

<h2>Use info</h2><br>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
  <br>
  <label for="inputImage">PlofileImage</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, class: "form-control" %>
  <br>


  <%= f.submit "Update User", class:"btn btn-sm btn-secondary " %>
<% end %>


  </div>
</div>
