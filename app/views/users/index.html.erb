
<div class = "container">
  <div class = "row">

    <%= render 'books/list', book: @book %>


    <div class = "mx_auto col-7">
      <h2>Users</h2>
      <table class="table">
        <thead>
        <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th colspan="1"></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        <% end %>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>